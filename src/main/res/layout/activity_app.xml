<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="moonvishnya.xyz.moonremote.AppActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_app_btn_send_signal"
        android:text="@string/send_signal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:elevation="0dp" />

    <Button
        android:text="@string/remove_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_app_btn_send_signal"
        android:layout_marginTop="45dp"
        android:id="@+id/main_app_btn_remove_signal"
        android:layout_alignLeft="@+id/main_app_btn_send_signal"
        android:layout_alignStart="@+id/main_app_btn_send_signal"
        android:layout_alignRight="@+id/main_app_btn_send_signal"
        android:layout_alignEnd="@+id/main_app_btn_send_signal" />

</RelativeLayout>
